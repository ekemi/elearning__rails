<h1 style ="background-color:#0B103D; color: white;border: 2px solid red; 
border-radius: 25px; text-align:center;">
Edit Student 
</h1>

<%= display_errors_for(@student)%>
<%= form_for(@student) do |f|%>
   <div> <%=f.label :name, "Student Name"%>
    <%=f.text_field :name%></div>
    <br><br>
   <div> <%=f.label :studentID, "Student ID:"%>
    <%=f.text_field :studentID%></div>
    <br><br>
  <div style="border: 2px solid red; 
  border-radius: 25px; text-align:center; background-color:orange;">
  <%=f.submit "Update student"%></div>
<%end%>