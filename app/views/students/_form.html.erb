<div style ="background-color:#0B103D; color: white;border: 2px solid red; 
border-radius: 25px; text-align:center;">

<%= display_errors_for(student)%>
<%= form_for student do |f|%>
    <%=f.label :name, "Student Name"%>
    <%=f.text_field :name%>
    <br><br>
    <%=f.label :studentID, "Student ID:"%>
    <%=f.text_field :studentID%>
    <br><br>
    <%=f.submit "Create a new student"%>
<%end%>

</div>
